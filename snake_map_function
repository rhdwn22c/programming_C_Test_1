void map() { //맵 테두리 그리는 함수 
	int i;
	for (i = 0;i < MAP_WIDTH;i++) 
	{
		gotoxy(MAP_X + i, MAP_Y, "▣");
	}
	for (i = MAP_Y + 1;i < MAP_Y + MAP_HEIGHT - 1;i++) 
	{
		gotoxy(MAP_X, i, "▣");
		gotoxy(MAP_X + MAP_WIDTH - 1, i, "▣");
	}
	for (i = 0;i < MAP_WIDTH;i++) 
	{
		gotoxy(MAP_X + i, MAP_Y + MAP_HEIGHT - 1, "▣");
	}
}
